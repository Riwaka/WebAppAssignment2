@model WebDevAssignmnet2.Models.Cloth

@{
    ViewBag.Title = "Create";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="login-form mb-5 padd">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            @using (Html.BeginForm("Create", "Clothes", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                if (TempData["Message1"] != null)
                                {
                                    <div>
                                        <p style="color:green;"><strong>Alert:</strong> @TempData["Message1"].ToString()</p>
                                    </div>
                                }

                                <div class="form-horizontal">
                                    <h4>Register Clothes!</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="dropdown" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.DropDownList("Gender", new List<SelectListItem>
                                                                {
                                                                      new SelectListItem { Text = "Male", Value = "Male"},
                                                                      new SelectListItem { Text = "Female", Value = "Female"},
                                                                      new SelectListItem { Text = "Unisex", Value = "Unisex"},
                                                                }, "Gender", new { @class = "btn dropdown btn-info" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.DropDownList("Category", new List<SelectListItem>
                                                                {
                                                                      new SelectListItem { Text = "T-Shirt", Value = "T-Shirt"},
                                                                      new SelectListItem { Text = "Hoodie", Value = "Hoodie"},
                                                                      new SelectListItem { Text = "Jeans", Value = "Jeans"},
                                                                      new SelectListItem { Text = "Jacket", Value = "Jacket"}
                                                                }, "Category", new { @class = "btn dropdown btn-info" })
                                            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.DropDownList("Condition", new List<SelectListItem>
                                                             {
                                                                   new SelectListItem { Text = "New", Value = "New"},
                                                                   new SelectListItem { Text = "Used", Value = "Used"}
                                                             }, "Condition", new { @class = "btn dropdown btn-info" })
                                            @Html.ValidationMessageFor(model => model.Condition, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @placeholder = "Color" } })
                                            @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.DropDownList("Size", new List<SelectListItem>
                                                                {
                                                                      new SelectListItem { Text = "Small", Value = "Small"},
                                                                      new SelectListItem { Text = "Medium", Value = "Medium"},
                                                                      new SelectListItem { Text = "Large", Value = "Large"},
                                                                      new SelectListItem { Text = "X-Large", Value = "X-Large"}
                                                                }, "Size", new { @class = "btn dropdown btn-info" })
                                            @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control", @placeholder = "Brand" } })
                                            @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location" } })
                                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <div class="col-md-3 btn-group">
                                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Price" } })
                                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="padding-top:10px">
                                        <input type="submit" name="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </div>
                            }

                            <div class="text-center">
                                <p>Want to buy clothes? <a href="~/Clothes/Clothing">Click Here!</a></p>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
        </div>
</body>
</html>>